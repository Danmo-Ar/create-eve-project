		"tsc-alias": "^1.8.10",
		"validate-npm-package-name": "^5.0.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": ["cli"],
	"devDependencies": {
		"@eslint/js": "^9.8.0",
		"@types/figlet": "^1.5.6",
